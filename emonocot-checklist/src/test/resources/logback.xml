<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{ISO8601} | %-5p | %t | %c | %m%n</pattern>
    </encoder>
  </appender>
  <!-- Used in UsageLoggingIntegrationTest -->
  <appender name="database" class="org.emonocot.checklist.logging.AltDBAppender">
      <dataSource
        class="org.apache.commons.dbcp.BasicDataSource">
        <driverClassName>${jdbc.driver.classname}</driverClassName>
        <url>${jdbc.driver.url}</url>
        <username>${jdbc.driver.username}</username>
        <password>${jdbc.driver.password}</password>
        <maxActive>15</maxActive>
        <maxIdle>7</maxIdle>
        <validationQuery>SELECT 1</validationQuery>
      </dataSource>
  </appender>
  <logger name="query" level="INFO" additivity="false">
    <appender-ref ref="database"/>
  </logger>
  <root level="WARN">
    <appender-ref ref="stdout"/>
  </root>
  <logger name="org.emonocot.checklist.logging.AltDBAppender" level="TRACE" additivity="false">
    <appender-ref ref="stdout"/>
  </logger>
  <!-- uncomment to see the xml responses -->
  <!--<logger name="org.emonocot.checklist.view.oai" level="INFO">
    <appender-ref ref="stdout"/>
  </logger>-->
  <!-- uncomment to see the SQL -->
  <!--<logger name="org.hibernate.SQL" level="TRACE">
    <appender-ref ref="stdout"/>
  </logger>-->
  <!-- uncomment to see the mapping -->
  <!-- <logger name="org.dozer.MappingProcessor" level="DEBUG">
    <appender-ref ref="stdout"/>
  </logger>-->
</configuration>