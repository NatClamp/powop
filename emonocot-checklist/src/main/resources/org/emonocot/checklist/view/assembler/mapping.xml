<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://dozer.sourceforge.net
    beanmapping.xsd">
    <configuration>
        <stop-on-errors>true</stop-on-errors>
        <date-format>MM/dd/yyyy HH:mm</date-format>
        <wildcard>false</wildcard>
        <custom-converters>
          <converter type="org.emonocot.checklist.view.oai.assembler.StatusTypeConverter">
            <class-a>org.emonocot.checklist.model.ChangeType</class-a>
            <class-b>org.openarchives.pmh.Status</class-b>
          </converter>
          <converter type="org.emonocot.checklist.view.assembler.DateTimeConverter">
            <class-a>org.joda.time.DateTime</class-a>
            <class-b>org.joda.time.DateTime</class-b>
          </converter>
          <converter type="org.emonocot.checklist.view.assembler.UriConverter">
            <class-a>java.lang.String</class-a>
            <class-b>java.net.URI</class-b>
          </converter>
          <converter type="org.emonocot.checklist.view.assembler.RankConverter">
            <class-a>org.emonocot.checklist.model.Rank</class-a>
            <class-b>org.tdwg.voc.TaxonRankTerm</class-b>
          </converter>
      </custom-converters>
    </configuration>
    <mapping>
        <class-a>org.emonocot.checklist.model.ChangeEventImpl</class-a>
        <class-b>org.openarchives.pmh.Header</class-b>
        <field>
          <a>identifier</a>
          <b>identifier</b>
        </field>
        <field>
            <a>type</a>
            <b>status</b>
        </field>
        <field>
          <a>datestamp</a>
          <b>datestamp</b>
        </field>
    </mapping>
    
    <mapping map-null="false"> 
        <class-a>org.emonocot.checklist.model.Taxon</class-a>
        <class-b>org.tdwg.voc.TaxonConcept</class-b>
        <field>
          <a>identifier</a>
          <b>identifier</b>
        </field>
         <field>
          <a>this</a>
          <b>hasName</b>
          <a-hint>org.emonocot.checklist.model.Taxon</a-hint>
          <b-hint>org.tdwg.voc.TaxonName</b-hint>
        </field>
        <field>
            <a>name</a>
            <b>hasName.nameComplete</b>
        </field>
        <field>
            <a>nameId</a>
            <b>hasName.identifier</b>
        </field>
        <field map-id="child">
          <a>childTaxa</a>
          <b>hasRelationship</b>
          <a-hint>org.emonocot.checklist.model.Taxon</a-hint>
          <b-hint>org.tdwg.voc.Relationship</b-hint>
        </field>
        <field map-id="accepted">
            <a>synonyms</a>
            <b>hasRelationship</b>
            <a-hint>org.emonocot.checklist.model.Taxon</a-hint>
            <b-hint>org.tdwg.voc.Relationship</b-hint>
        </field>
        <field type="one-way" map-id="parent">
            <a>parentTaxon</a>
            <b set-method="addHasRelationship">hasRelationship</b>
            <a-hint>org.emonocot.checklist.model.Taxon</a-hint>
            <b-hint>org.tdwg.voc.Relationship</b-hint>
        </field>
        <field type="one-way" map-id="synonym">
            <a>acceptedName</a>
            <b set-method="addHasRelationship">hasRelationship</b>
            <a-hint>org.emonocot.checklist.model.Taxon</a-hint>
            <b-hint>org.tdwg.voc.Relationship</b-hint>
        </field>
        <field type="one-way">
            <a>this</a>
            <b set-method="addDescribedBy">describedBy</b>
            <a-hint>org.emonocot.checklist.model.Taxon</a-hint>
            <b-hint>org.tdwg.voc.SpeciesProfileModel</b-hint>
        </field>
        <field>
          <a>citations</a>
          <b>publishedInCitations</b>
      </field>
    </mapping>
    
    <mapping>
      <class-a>org.emonocot.checklist.model.Article</class-a>
      <class-b bean-factory="org.emonocot.checklist.view.assembler.ArticleBeanFactory">org.tdwg.voc.PublicationCitation</class-b>
      <field>
        <a>identifier</a>
        <b>identifier</b>
      </field>
      <field>
        <a>title</a>
        <b>tpubTitle</b>
      </field>
      <field>
        <a>author</a>
        <b>authorship</b>
      </field>
      <field>
        <a>publication</a>
        <b>parentPublication</b>
      </field>
    </mapping>
    
    <mapping>
      <class-a>org.emonocot.checklist.model.Publication</class-a>
      <class-b bean-factory="org.emonocot.checklist.view.assembler.PublicationBeanFactory">org.tdwg.voc.PublicationCitation</class-b>
      <field>
        <a>identifier</a>
        <b>identifier</b>
      </field>
      <field>
        <a>title</a>
        <b>tpubTitle</b>
      </field>
      <field>
        <a>author</a>
        <b>authorship</b>
      </field>
      <field>
        <a>publisher</a>
        <b>publisher</b>
      </field>
    </mapping>
    
    <mapping>
      <class-a>org.emonocot.checklist.model.Taxon</class-a>
      <class-b bean-factory="org.emonocot.checklist.view.assembler.TaxonNameBeanFactory">org.tdwg.voc.TaxonName</class-b>
      <field>
        <a>nameId</a>
        <b>identifier</b>
      </field>
      <field>
        <a>name</a>
        <b>nameComplete</b>
      </field>
      <field>
        <a>family</a>
        <b>family</b>
      </field>
      <field>
        <a>species</a>
        <b>specificEpithet</b>
      </field>
      <field>
        <a>infraspecificEpithet</a>
        <b>infraspecificEpithet</b>
      </field>
      <field>
        <a>rank.label</a>
        <b>rankString</b>
      </field>
      <field>
        <a>rank</a>
        <b>rank</b>
      </field>
      <field type="one-way">
          <a>this</a>
          <b set-method="addPublicationCitation">publishedInCitations</b>
          <a-hint>org.emonocot.checklist.model.Taxon</a-hint>
          <b-hint>org.tdwg.voc.PublicationCitation</b-hint>
      </field>
      <field custom-converter="org.emonocot.checklist.view.assembler.AuthorshipConverter"
         custom-converter-param="basionymAuthorship">
          <a>this</a>
          <b>basionymAuthorship</b>
      </field>
      <field custom-converter="org.emonocot.checklist.view.assembler.AuthorshipConverter"
         custom-converter-param="combinationAuthorship">
        <a>this</a>
        <b>combinationAuthorship</b>
      </field>
      <field custom-converter="org.emonocot.checklist.view.assembler.AuthorshipConverter"
         custom-converter-param="authorship">
        <a>this</a>
        <b>authorship</b>
      </field>
    </mapping>
    
    <mapping>
        <class-a>org.emonocot.checklist.model.Taxon</class-a>
        <class-b bean-factory="org.emonocot.checklist.view.assembler.ProtologueBeanFactory">org.tdwg.voc.PublicationCitation</class-b>
    </mapping>
    
    <mapping map-id="accepted">
        <class-a>org.emonocot.checklist.model.Taxon</class-a>
        <class-b bean-factory="org.emonocot.checklist.view.assembler.AcceptedRelationshipBeanFactory">org.tdwg.voc.Relationship</class-b>
        <field>
            <a>this</a>
            <b>toTaxon</b>
        </field>
    </mapping>  
    
    <mapping map-id="synonym">
        <class-a>org.emonocot.checklist.model.Taxon</class-a>
        <class-b bean-factory="org.emonocot.checklist.view.assembler.SynonymRelationshipBeanFactory">org.tdwg.voc.Relationship</class-b>
        <field>
            <a>this</a>
            <b>toTaxon</b>
        </field>
    </mapping>
    
    <mapping map-id="parent">
        <class-a>org.emonocot.checklist.model.Taxon</class-a>
        <class-b bean-factory="org.emonocot.checklist.view.assembler.ParentRelationshipBeanFactory">org.tdwg.voc.Relationship</class-b>
        <field>
            <a>this</a>
            <b>toTaxon</b>
        </field>
    </mapping>
    
    <mapping map-id="child">
        <class-a>org.emonocot.checklist.model.Taxon</class-a>
        <class-b bean-factory="org.emonocot.checklist.view.assembler.ChildRelationshipBeanFactory">org.tdwg.voc.Relationship</class-b>
        <field>
            <a>this</a>
            <b>toTaxon</b>
        </field>
    </mapping>
    
     <mapping>
        <class-a>org.emonocot.checklist.model.Taxon</class-a>
        <class-b>org.tdwg.voc.SpeciesProfileModel</class-b>
        <field>
          <a>this</a>
          <b>aboutTaxon</b>
        </field>
       <field>
          <a>distribution</a>
          <b set-method="addHasInformation">hasInformation</b>
          <a-hint>org.emonocot.checklist.model.Distribution</a-hint>
          <b-hint>org.tdwg.voc.Distribution</b-hint>
        </field>
    </mapping>
    
    <mapping>
        <class-a>org.emonocot.checklist.model.Distribution</class-a>
        <class-b>org.tdwg.voc.Distribution</class-b>
        <field custom-converter="org.emonocot.checklist.view.assembler.GeographicRegionConverter">
            <a>this</a>
            <b set-method="addValue">hasValue</b>
        </field>
    </mapping>
    
</mappings>    