<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://dozer.sourceforge.net
    beanmapping.xsd">
    <configuration>
        <stop-on-errors>true</stop-on-errors>
        <date-format>MM/dd/yyyy HH:mm</date-format>
        <wildcard>false</wildcard>
        <custom-converters>
          <converter type="org.emonocot.checklist.view.oai.assembler.StatusTypeConverter">
            <class-a>org.emonocot.checklist.model.ChangeType</class-a>
            <class-b>org.openarchives.pmh.Status</class-b>
          </converter>
          <converter type="org.emonocot.checklist.view.assembler.DateTimeConverter">
            <class-a>org.joda.time.DateTime</class-a>
            <class-b>org.joda.time.DateTime</class-b>
          </converter>
      </custom-converters>
    </configuration>
    <mapping>
        <class-a>org.emonocot.checklist.model.ChangeEvent</class-a>
        <class-b>org.openarchives.pmh.Header</class-b>
        <field>
          <a>object.identifier</a>
          <b>identifier</b>
        </field>
        <field>
            <a>type</a>
            <b>status</b>
        </field>
        <field>
          <a>datestamp</a>
          <b>datestamp</b>
        </field>
    </mapping>
    
    <mapping>
        <class-a>org.emonocot.checklist.test.DummyIdentifiableEntity</class-a>
        <class-b>org.openarchives.pmh.OaiDc</class-b>
        <field>
          <a>identifier</a>
          <b>dcIdentifier</b>
        </field>
        <field>
            <a>title</a>
            <b>dcTitle</b>
        </field>
        <field>
          <a>created</a>
          <b>dcDate</b>
        </field>
    </mapping>
    
    <mapping map-null="false"> 
        <class-a>org.emonocot.checklist.model.Taxon</class-a>
        <class-b>org.tdwg.voc.TaxonConcept</class-b>
        <field>
          <a>identifier</a>
          <b>identifier</b>
        </field>
        <field>
            <a>name</a>
            <b>hasName.nameComplete</b>
        </field>
        <field>
            <a>nameId</a>
            <b>hasName.identifier</b>
        </field>
        <!-- <field map-id="child">
          <a>subordinateTaxa</a>
          <b>hasRelationship</b>
          <a-hint>org.emonocot.checklist.model.Taxon</a-hint>
          <b-hint>org.tdwg.voc.Relationship</b-hint>
        </field>-->
        <field map-id="accepted">
            <a>synonyms</a>
            <b>hasRelationship</b>
            <a-hint>org.emonocot.checklist.model.Taxon</a-hint>
            <b-hint>org.tdwg.voc.Relationship</b-hint>
        </field>
        <!-- <field type="one-way" map-id="parent">
            <a>parent</a>
            <b set-method="addHasRelationship">hasRelationship</b>
        </field>-->
        <field type="one-way" map-id="synonym">
            <a>acceptedName</a>
            <b set-method="addHasRelationship">hasRelationship</b>
            <a-hint>org.emonocot.checklist.model.Taxon</a-hint>
            <b-hint>org.tdwg.voc.Relationship</b-hint>
        </field>
        <field type="one-way">
            <a>this</a>
            <b set-method="addDescribedBy">describedBy</b>
            <a-hint>org.emonocot.checklist.model.Taxon</a-hint>
            <b-hint>org.tdwg.voc.SpeciesProfileModel</b-hint>
        </field>
    </mapping>
    
    <mapping map-id="accepted">
        <class-a>org.emonocot.checklist.model.Taxon</class-a>
        <class-b bean-factory="org.emonocot.checklist.view.assembler.AcceptedRelationshipBeanFactory">org.tdwg.voc.Relationship</class-b>
        <field>
            <a>this</a>
            <b>toTaxon</b>
        </field>
    </mapping>  
    
    <mapping map-id="synonym">
        <class-a>org.emonocot.checklist.model.Taxon</class-a>
        <class-b bean-factory="org.emonocot.checklist.view.assembler.SynonymRelationshipBeanFactory">org.tdwg.voc.Relationship</class-b>
        <field>
            <a>this</a>
            <b>toTaxon</b>
        </field>
    </mapping>
    
     <mapping>
        <class-a>org.emonocot.checklist.model.Taxon</class-a>
        <class-b>org.tdwg.voc.SpeciesProfileModel</class-b>
        <field>
          <a>this</a>
          <b>aboutTaxon</b>
        </field>
       <field>
          <a>distribution</a>
          <b set-method="addHasInformation">hasInformation</b>
          <a-hint>org.emonocot.checklist.model.Distribution</a-hint>
          <b-hint>org.tdwg.voc.Distribution</b-hint>
        </field>
    </mapping>
    
    <mapping>
        <class-a>org.emonocot.checklist.model.Distribution</class-a>
        <class-b>org.tdwg.voc.Distribution</class-b>
        <field custom-converter="org.emonocot.checklist.view.assembler.GeographicRegionConverter">
            <a>this</a>
            <b set-method="addValue">hasValue</b>
        </field>
    </mapping>
    
</mappings>    