<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_4.xsd">
    <display-name>World Check-List of Selected Plant Families Web Services</display-name>
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>wcsp.services.root</param-value>
	</context-param>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    
    <context-param>
		<param-name>logbackConfigLocation</param-name>
		<param-value>/WEB-INF/classes/logback.xml</param-value>
	</context-param>

	<listener>
		<listener-class>org.emonocot.common.logback.LogbackConfigListener
		</listener-class>
	</listener>
	
	<filter>
		<filter-name>MDCInsertingServletFilter</filter-name>
		<filter-class>ch.qos.logback.classic.helpers.MDCInsertingServletFilter
		</filter-class>
	</filter>
	
	<filter>
	  <filter-name>ClientParameterFilter</filter-name>
	  <filter-class>org.emonocot.checklist.logging.ClientParameterFilter</filter-class>
	  <init-param>
        <param-name>parameterName</param-name>
        <param-value>scratchpad</param-value>
      </init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>MDCInsertingServletFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>ClientParameterFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
    
	<servlet>
        <servlet-name>wcsTaxonExtractor</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>wcsTaxonExtractor</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    
    <session-config>
	    <session-timeout>1</session-timeout>
	</session-config>
</web-app>
