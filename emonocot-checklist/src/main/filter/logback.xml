<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${logging.checklist.location}</File>
        <encoder>
            <pattern>%d{ISO8601} | %X{req.remoteHost} | %X{req.requestURI} | %X{req.userAgent} |
                %-5p | %t | %c | %m%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <maxIndex>10</maxIndex>
            <FileNamePattern>${logging.location}.%i</FileNamePattern>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>1MB</MaxFileSize>
        </triggeringPolicy>
    </appender>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{ISO8601} | %X{req.remoteHost} | %X{req.requestURI} | %X{req.userAgent} |
                %-5p | %t | %c | %m%n</pattern>
        </encoder>
    </appender>
    <appender name="database" class="org.emonocot.checklist.logging.DBAppender">
        <dataSource class="org.apache.commons.dbcp.BasicDataSource">
            <driverClassName>${jdbc.driver.classname}</driverClassName>
            <url>${jdbc.driver.url}</url>
            <username>${jdbc.driver.username}</username>
            <password>${jdbc.driver.password}</password>
            <maxActive>15</maxActive>
            <maxIdle>7</maxIdle>
            <validationQuery>SELECT 1</validationQuery>
        </dataSource>
        <insertSql>${querylog.insert.statement}</insertSql>
    </appender>
    <logger name="query" level="INFO" additivity="false">
        <appender-ref ref="database"/>
    </logger>
    <root level="${logging.checklist.level}">
        <appender-ref ref="${logging.checklist.method}"/>
    </root>
  <logger name="org.emonocot.checklist.logging.DBAppender" level="WARN" additivity="false">
    <appender-ref ref="file"/>
  </logger>
    <logger name="org.dozer.MappingProcessor" level="ERROR" addivity="false">
        <appender-ref ref="file"/>
    </logger>
</configuration>