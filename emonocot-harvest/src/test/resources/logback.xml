<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoding>UTF-8</encoding>
    <encoder>
      <pattern>%d{ISO8601} | %-5p | %t | %c | %m%n</pattern>
    </encoder>
  </appender>
  <logger name="org.emonocot.job" additivity="false" level="INFO">
    <appender-ref ref="stdout"/>
  </logger>
  <logger name="org.emonocot.ws" additivity="false" level="INFO">
    <appender-ref ref="stdout"/>
  </logger>
  <root level="WARN">
    <appender-ref ref="stdout"/>
  </root>
</configuration>