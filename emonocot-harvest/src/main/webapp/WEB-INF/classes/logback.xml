<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <File>${logging.location}</File>
    <encoder>
      <pattern>%d{ISO8601} | %X{req.remoteHost} | %X{req.requestURI} | %X{req.userAgent}  | %-5p | %t | %c | %m%n</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <maxIndex>10</maxIndex>
      <FileNamePattern>${logging.location}.%i</FileNamePattern>
    </rollingPolicy>
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <MaxFileSize>100MB</MaxFileSize>
    </triggeringPolicy>
  </appender>
  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{ISO8601} | %X{req.remoteHost} | %X{req.requestURI} | %X{req.userAgent}  | %-5p | %t | %c | %m%n</pattern>
    </encoder>
  </appender>
  <root level="${logging.level}" additivity="true">
    <appender-ref ref="${logging.method}"/>
  </root>
  <!-- uncomment to see spring integration messages -->
  <!-- <logger name="org.springframework.integration.handler.LoggingHandler" level="DEBUG" additivity="false">
    <appender-ref ref="stdout"/>
  </logger>-->
  <!-- uncomment to see activemq messages -->
   <!-- <logger name="org.emonocot.harvest.common.index.MessageDrivenSearchController" level="DEBUG" additivity="false">
    <appender-ref ref="stdout"/>
  </logger>-->
  <logger name="org.emonocot.job.dwc.taxon" level="DEBUG" additivity="false">
    <appender-ref ref="file"/>
  </logger>  
</configuration>