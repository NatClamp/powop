<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:integration="http://www.springframework.org/schema/integration"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jms="http://www.springframework.org/schema/integration/jms"
	xmlns:integration-http="http://www.springframework.org/schema/integration/http"
	xsi:schemaLocation="http://www.springframework.org/schema/integration/http http://www.springframework.org/schema/integration/http/spring-integration-http.xsd
		http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
		http://www.springframework.org/schema/integration/jms http://www.springframework.org/schema/integration/jms/spring-integration-jms.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	xmlns:util="http://www.springframework.org/schema/util">

	<context:property-placeholder location="classpath*:META-INF/spring/*.properties" />
	
	<jms:message-driven-channel-adapter id="jobStatusNotificationAdapter"
    connection-factory="connectionFactory"
    destination="jmsBackendQueue"
    extract-payload="false"
    channel="jmsBackendChannel"/>
	
	<bean id="jmsBackendQueue" class="org.apache.activemq.command.ActiveMQQueue">
		<constructor-arg value="${amq.queue.physical_name}" />
	</bean>
	
	<integration:channel id="jmsBackendChannel" />
	
	<integration:service-activator
		input-channel="jmsBackendChannel" ref="messageDrivenSearchController"
		method="onMessage" />
	
	<bean id="messageDrivenSearchController"
		class="org.emonocot.harvest.common.index.MessageDrivenSearchController">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<integration:gateway id="jobStatusNotifier"
		service-interface="org.emonocot.api.job.JobStatusNotifier"
		default-request-channel="jobStatusNotificationChannel">
		<integration:method name="notify" />
	</integration:gateway>

	<integration:channel id="jobStatusNotificationChannel" datatype="org.emonocot.api.job.JobExecutionInfo" />
	
	<integration:object-to-json-transformer
		input-channel="jobStatusNotificationChannel"
		output-channel="transformedJobStatusNotificationChannel"
		object-mapper="objectMapper" />
		
   <integration:channel id="transformedJobStatusNotificationChannel"/>

	<jms:outbound-channel-adapter
		id="jobStatusNotificationAdapter" 
		extract-payload="true" 
		channel="transformedJobStatusNotificationChannel"
		connection-factory="connectionFactory"
        destination="jobStatusQueue" />
        
    <bean id="jobStatusQueue" class="org.apache.activemq.command.ActiveMQQueue">
		<constructor-arg value="job.status.notifications" />
	</bean>

</beans>
