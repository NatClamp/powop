<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:integration="http://www.springframework.org/schema/integration"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jms="http://www.springframework.org/schema/integration/jms"
	xmlns:integration-http="http://www.springframework.org/schema/integration/http"
	xsi:schemaLocation="http://www.springframework.org/schema/integration/http http://www.springframework.org/schema/integration/http/spring-integration-http.xsd
		http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
		http://www.springframework.org/schema/integration/jms http://www.springframework.org/schema/integration/jms/spring-integration-jms.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	xmlns:util="http://www.springframework.org/schema/util">

	<context:property-placeholder location="classpath*:META-INF/spring/*.properties" />

    <bean id="jobLaunchRequestsQueue" class="org.apache.activemq.command.ActiveMQQueue">
		<constructor-arg value="job.launch.requests" />
	</bean>
	
	<jms:inbound-gateway id="jobLaunchGateway"
		request-channel="jobLaunchRequests" request-destination="jobLaunchRequestsQueue"
		message-converter="mappingMessageConverter" connection-factory="connectionFactory" />
	
	<integration:channel id="jobLaunchRequests" />

	<integration:service-activator
		input-channel="jobLaunchRequests" ref="jobLauncherImpl" method="launch" />

	<bean id="jobLauncherImpl" class="org.emonocot.harvest.integration.JobLauncherImpl">
		<property name="jobLauncher" ref="jobLauncher" />
		<property name="jobLocator" ref="jobRegistry" />
		<property name="baseUrl" value="${harvester.baseUrl}" />
	</bean>	

	<bean id="mappingMessageConverter"
		class="org.springframework.jms.support.converter.MappingJacksonMessageConverter">
		<property name="objectMapper" ref="objectMapper" />
		<property name="typeIdPropertyName" value="javaType" />
		<property name="typeIdMappings">
			<map>
				<entry>
					<key>
						<value>JobLaunchRequest</value>
					</key>
					<value>org.emonocot.api.job.JobLaunchRequest</value>
				</entry>
				<entry>
					<key>
						<value>JobExecutionInfo</value>
					</key>
					<value>org.emonocot.api.job.JobExecutionInfo</value>
				</entry>
			</map>
		</property>
	</bean>

	<integration:gateway id="jobStatusNotifier"
		service-interface="org.emonocot.api.job.JobStatusNotifier"
		default-request-channel="jobStatusNotificationChannel">
		<integration:method name="notify" />
	</integration:gateway>

	<integration:channel id="jobStatusNotificationChannel"	datatype="org.emonocot.api.job.JobExecutionInfo" />


	<jms:outbound-channel-adapter id="jobStatusNotificationAdapter"
		channel="jobStatusNotificationChannel"
		message-converter="mappingMessageConverter"
		connection-factory="connectionFactory"
		destination="jobStatusQueue" />

	<bean id="jobStatusQueue" class="org.apache.activemq.command.ActiveMQQueue">
		<constructor-arg value="job.status.notifications" />
	</bean>

</beans>
