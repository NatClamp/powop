<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN" "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<tiles-definitions>  
  <definition name="resource/list" extends="default">
    <put-attribute name="pageTitle" value="resources.title" cascade="true"/>    
    <put-attribute name="body" value="/WEB-INF/views/resource/list.jspx" />
  </definition>
  <definition name="resource/create" extends="default">    
    <put-attribute name="pageTitle" value="create.resource" cascade="true"/>
    <put-attribute name="body" value="/WEB-INF/views/resource/create.jspx" />
  </definition>
  <definition name="resource/update" extends="default">    
    <put-attribute name="pageTitle" value="${resource.title}" cascade="true"/>
    <put-attribute name="body" value="/WEB-INF/views/resource/update.jspx" />
  </definition>
  <definition name="resource/show" extends="default">    
    <put-attribute name="pageTitle" value="${resource.title}" cascade="true"/>
    <put-attribute name="body" value="/WEB-INF/views/resource/show.jspx" />
  </definition> 
  <definition name="resource/output" extends="default">    
    <put-attribute name="pageTitle" value="${resource.title}" cascade="true"/>
    <put-attribute name="body" value="/WEB-INF/views/resource/output.jspx" />
  </definition>  
</tiles-definitions>
