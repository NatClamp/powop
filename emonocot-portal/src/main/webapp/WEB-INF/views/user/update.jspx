<?xml version="1.0" encoding="UTF-8" ?>
<div xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:em="http://e-monocot.org/portal/functions"
	xmlns:tags="urn:jsptagdir:/WEB-INF/tags"
	xmlns:fn="http://java.sun.com/jsp/jstl/functions"
	xmlns:form="urn:jsptagdir:/WEB-INF/tags/form"
	xmlns:field="urn:jsptagdir:/WEB-INF/tags/form/fields"
	xmlns:spring="http://www.springframework.org/tags">
	<tags:pageheader>
		<h2 id="page-title">
			<i class="glyphicons-icon home">
				<!--  -->
			</i>${user.accountName}
		</h2>
	</tags:pageheader>
	<div class="container">
		<div class="row">
			<div class="span12">
				<tags:info />
				<tags:error />
			</div>
		</div>
		<div class="row">
			<div class="span12">
				<div class="inner">
					<div class="box clearfix">
						<form:create path="/home" modelAttribute="user" multipart="true">
							<field:hidden field="identifier"/>
							<field:input field="accountName" label="accountName" fieldClass="span6" required="true"/>
				            <field:input field="name" label="name" fieldClass="span6"/>
				            <field:input field="firstName" label="firstName" fieldClass="span6"/>
				            <field:input field="familyName" label="familyName" fieldClass="span6"/>
				            <field:input field="homepage" label="homepage" fieldClass="span6"/>
				            <field:input field="imgFile" label="img" type="file" fieldClass="span6"/>
				            <field:input field="organization" label="organization" fieldClass="span6"/>
				            <field:input field="topicInterest" label="topicInterest" fieldClass="span6"/>
				            <field:checkbox field="notifyByEmail" label="notifyByEmail" fieldClass="span6"/>
					    </form:create>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>