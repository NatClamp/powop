{{> partials/header title="Plants of the World Online | Kew Science"}}
<div class="s-page s-page--home s-theme-home">
  <div class="s-page-wrapper">
    <header class="c-header">
      <div class="container-fluid">
        {{> partials/header/kew-logo-header}}
        <nav class="c-header__actions">
          Featured: <a href="/taxon/urn:lsid:ipni.org:names:329605-2">Anagallis arvensis</a><br>
          <small>
            <div>Image from Stuppy &amp; Kesseler</div>
            <div>Â©Papadakis Publisher</div>
          </small>
        </nav>
      </div>
    </header>

    <section class="s-search-home">
      <div class="container">
        <div class="c-intro">
          <h1 class="c-intro__title">An online resource for the world's plants</h1>
          <p>Our aim is to document the world's plants, for public information and research. Browse through our collection of {{names}} plant names, {{images}} entries with images, research is ongoing.</p>
        </div>

        <div class="c-search-home autocomplete-form">
          <div class="form-add form-inline form-inline--home">
            <div id="any" class="form-group form-inline__input tab-pane active">
              <label for="search" class="sr-only">Search</label>
              <input type="search" autocomplete="off" class="form-control refine" id="search"
               data-suggester="scientific-name,location,characteristic,common-name"
               data-count=2
               data-showsuggester=true
               placeholder="Search by species, genus or family name, or any words describing the plant">
            </div>
            <button type="submit" class="btn btn-default">Search</button>
          </div>
          <nav>
            <ul class="c-search-home__links list-inline">
              <li>Or find plants by:</li>
              <li><a href="search#names">Name</a></li>
              <li><a href="search#characteristics">Characteristic</a></li>
              <li><a href="search#locations">Location</a></li>
              <li class="hidden"><a href="search#uses">Usage</a></li>
            </ul>
          </nav>
        </div>

      </div><!-- End Container -->
    </section>
    {{> partials/footer-links-fluid}}
  </div>
</div>
{{> partials/footer initialize="home"}}
