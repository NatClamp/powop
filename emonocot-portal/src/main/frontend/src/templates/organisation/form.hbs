{{> partials/header}}
<div class="s-page">
  <header class="c-header">
    <div class="container">
      {{> partials/header/kew-logo-header}}
    </div>
  </header>

  <article class="c-article">
    <h1>{{title}}</h1>

    {{#each errors}}
    <div class="alert alert-danger">
      {{this}}
    </div>
    {{/each}}

    <form action id="organisation" action="/organisation" method="post" enctype="application/x-www-form-urlencoded">
      <div class="form-group">
        <label for="_title_id">Title</label>
        <input type="text" id="_title_id" name="title" value="{{title}}" class="form-control"/>
      </div>
      <div class="form-group">
        <label for="_identifier_id">Identifier</label>
        <input type="text" id="_identifier_id" name="identifier" value="{{identifier}}" class="form-control"/>
      </div>
      <div class="form-group">
        <label for="_abbreviation_id">Abbreviation</label>
        <input type="text" id="_abbreviation_id" name="abbreviation" value="{{abbreviation}}" class="form-control"/>
      </div>
      <div class="form-group">
        <label for="_uri_id">Url</label>
        <input type="text" id="_uri_id" name="uri" value="{{uri}}" class="form-control"/>
      </div>
      <div class="form-group">
        <label for="_bibliographicCitation_id">Bibliographic Citation</label>
        <textarea id="_bibliographicCitation_id" name="bibliographicCitation" class="form-control"/>{{bibliographicCitation}}</textarea>
      </div>
      <input type="hidden" name="{{_csrf.parameterName}}" value="{{_csrf.token}}" />

      <input value="Submit" type="submit" class="btn"/>
    </form>
  </article>
  {{> partials/admin-footer}}
</div>
{{> partials/footer}}
