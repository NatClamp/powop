<div class="row"> 
  <form class="form-add form-inline form-inline--search">
    <div class="form-group form-inline__select">
      <select class="form-control">
        <option>All</option>
        <option>Family</option>
        <option>Genus</option>
        <option>Species</option>
        <option>Common</option>
      </select>
    </div>
    <div class="form-group form-inline__input">
      <label for="refine" class="sr-only">Search</label>
      <input type="email" class="form-control" id="refine" placeholder="Enter Family, Genus or Species name ...">
    </div>
    <button type="submit" class="btn btn-default">Search</button>
  </form>
</div>