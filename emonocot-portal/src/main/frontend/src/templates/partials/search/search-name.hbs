<div class="row">
  <form class="form-add form-inline form-inline--search">
    <div class="form-group form-inline__select">
      <div class="c-select">
        <span class="c-select__default">
          <span class="text">All</span>
          <svg class="svg--sprite-chevron-dims">
            <use xlink:href="#sprite-chevron"></use>
          </svg>
        </span>
        <select id="searchselect" class="c-select__control form-control">
          <option value="Name">All</option>
          <option value="Family">Family</option>
          <option value="Genus">Genus</option>
          <option value="Species">Species</option>
          <option value="Common Name">Common</option>
        </select>
      </div>
    </div>
    <div class="form-group form-inline__input">
      <label for="refine" class="sr-only">Search</label>
      <input class="form-control refine" placeholder="Enter Family, Genus or Species name ...">
      {{>autocomplete theme="c-autocomplete--inline"}}
    </div>
    <button type="submit" class="btn btn-default">Search</button>
  </form>
</div>
