<?xml version="1.0" encoding="UTF-8"?>
<!-- Mondrian example does not appear to follow it's own DTD <!DOCTYPE Schema SYSTEM "../../main/resources/pentaho/mondrian/mondrian.dtd" 
    > -->
<Schema name="testSchema">
    <Cube name="harvest">
        <Table name="ANNOTATION"/>
        <Dimension name="taxa" foreignKey="ANNOTATEDOBJID">
            <Hierarchy hasAll="true" primaryKey="ID">
                <Table name="TAXON"/>
                <Level name="family" column="FAMILY" uniqueMembers="true"/>
                <Level name="genus" column="GENUS" uniqueMembers="true"/>
                <Level name="species" column="SPECIFICEPITHET" uniqueMembers="true"/>
            </Hierarchy>
        </Dimension>
        <!--<Dimension name="source system" foreignkey="source_id"></Dimension> -->
        <Dimension name="Objects">
            <Hierarchy hasAll="true">
                <Level name="Object type" column="ANNOTATEDOBJTYPE" uniqueMembers="true"/>
            </Hierarchy>
        </Dimension>
        <Measure name="number harvested" column="ANNOTATEDOBJID" aggregator="distinct-count"
            formatString="#,###"/>
    </Cube>
</Schema>
